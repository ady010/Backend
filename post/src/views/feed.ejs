<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minimalist Blog</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900">

    <!-- Navbar -->
    <div class="navbar flex justify-between items-center bg-white shadow-md px-6 py-4">
        <h1 class="text-xl font-semibold">Hi, <%= username %></h1>
        <a href="/create-post">
            <button class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">
                New Post
            </button>
        </a>
    </div>

    <!-- Posts Section -->
    <div class="container mx-auto mt-8 max-w-2xl">
        <% posts.forEach(post => { %>
            <div class="bg-white rounded-lg shadow-md p-4 mb-4 hover:shadow-lg transition">
                <img src="<%= post.Pimg %>" class="w-full rounded-lg object-cover aspect-video">
                <p class="mt-3 text-gray-700 text-lg font-medium"><%= post.caption %></p>
            </div>
        <% }) %>
    </div>

</body>
</html>
